<template>
  <div class="dashboard">
    <div class="dashboard-header">
      <div class="header-content">
        <h1>Financial Dashboard</h1>
        <p class="subtitle">Your budget overview and expense planning</p>
      </div>
      <div class="header-actions">
        <button @click="navigateToCalculator" class="btn btn-secondary">
          ‚úèÔ∏è Edit Calculator
        </button>
        <button @click="recalculate" class="btn btn-primary">
          üîÑ Recalculate
        </button>
      </div>
    </div>

    <div v-if="!budgetStore.hasCalculated" class="no-data-message">
      <div class="message-box">
        <h2>No Budget Data Available</h2>
        <p>Please complete the calculator first to see your dashboard.</p>
        <button @click="navigateToCalculator" class="btn btn-primary">
          Go to Calculator
        </button>
      </div>
    </div>

    <div v-else class="dashboard-content">
      <!-- Summary Cards Grid -->
      <div class="summary-grid">
        <IncomeCard />
        <ExpensesCard />
        <CashFlowCard />
      </div>

      <!-- Expense Account Planning Section -->
      <div class="planning-section">
        <ExpenseAccountTable />
      </div>

      <!-- Additional Info Section -->
      <div class="info-section">
        <div class="info-card">
          <h3>üí° Tips</h3>
          <ul>
            <li>Transfer money to your expense account the week before expenses are due</li>
            <li>Monitor your running balance to avoid going negative</li>
            <li>Adjust your budget if you notice consistent deficits</li>
            <li>Plan ahead for annual expenses like insurance and registrations</li>
          </ul>
        </div>

        <div class="info-card" v-if="hasExpenseAccount">
          <h3>üìà Account Status</h3>
          <div class="account-info">
            <div class="account-item">
              <span class="label">Expense Account:</span>
              <span class="value">{{ expenseAccount.name }}</span>
            </div>
            <div class="account-item">
              <span class="label">Current Balance:</span>
              <span class="value">{{ formatCurrency(expenseAccount.balance) }}</span>
            </div>
            <div class="account-item" v-if="expenseAccount.target">
              <span class="label">Target Balance:</span>
              <span class="value">{{ formatCurrency(expenseAccount.target) }}</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</template>

<script setup>
import { computed } from 'vue'
import { useRouter } from 'vue-router'
import { useBudgetStore } from '@/stores/budget'
import { useNotificationStore } from '@/stores/notification'
import IncomeCard from '@/components/dashboard/IncomeCard.vue'
import ExpensesCard from '@/components/dashboard/ExpensesCard.vue'
import CashFlowCard from '@/components/dashboard/CashFlowCard.vue'
import ExpenseAccountTable from '@/components/dashboard/ExpenseAccountTable.vue'

const router = useRouter()
const budgetStore = useBudgetStore()
const notificationStore = useNotificationStore()

const hasExpenseAccount = computed(() => {
  return budgetStore.accounts.some(a => a.isExpenseAccount)
})

const expenseAccount = computed(() => {
  return budgetStore.accounts.find(a => a.isExpenseAccount)
})

function navigateToCalculator() {
  router.push('/calculator')
}

function recalculate() {
  try {
    budgetStore.calculate()
    notificationStore.success('Budget recalculated successfully')
  } catch (error) {
    console.error('Calculation error:', error)
    notificationStore.error('Error recalculating budget. Please check your inputs.')
  }
}

function formatCurrency(amount) {
  return new Intl.NumberFormat('en-NZ', {
    style: 'currency',
    currency: 'NZD',
    minimumFractionDigits: 2,
    maximumFractionDigits: 2
  }).format(amount)
}
</script>

